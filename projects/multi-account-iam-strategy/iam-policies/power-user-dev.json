{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowDevelopmentAccess",
            "Effect": "Allow",
            "Action": [
                "ec2:*",
                "s3:*",
                "lambda:*"   
            ],
            "Resource": [
              "arn:aws:ec2:*:${AccountId}:instance/*dev*",
              "arn:aws:s3:::dev-*",
              "arn:aws:s3:::dev-*/*",
              "arn:aws:lambda:*:${AccountId}:function:*dev*"
          ]     
           
        },
        {
            "Sid": "DenyProductionAccess",
            "Effect": "Deny",
            "Action": "*",
            "Resource": "arn:aws:*:222222222222:*/*",
            "Condition": {
                "StringNotEquals": {
                    "aws:PrincipalTag/Environment": "ProductionAdmin"
                }
            }
        },
        {
            "Sid": "DenyIAMUserManagement",
            "Effect": "Deny",
            "Action": [
                "iam:CreateUser",
                "iam:DeleteUser",
                "iam:CreateGroup",
                "iam:DeleteGroup",
                "iam:CreatePolicy",
                "iam:DeletePolicy"
            ],
            "Resource": "*"
        }
    ]
}

