{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "BreakGlassFullAccess",
            "Effect": "Allow",
            "Action": "*",
            "Resource": "*",
            "Condition": {
                "Bool": {
          "aws:MultiFactorAuthPresent": "true"
                }
            }
        },
        {
            "Sid": "DenyIfNotBreakGlass",
            "Effect": "Deny",
            "Action": "*",
            "Resource": "*",
            "Condition": {
                "StringNotEquals": {
                    "aws:PrincipalTag/Role": "BreakGlassAdmin"
                }
            }
        }
    ]
}

